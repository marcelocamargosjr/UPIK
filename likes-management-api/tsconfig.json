{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "types": ["jest"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["es6"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
